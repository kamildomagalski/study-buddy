{
    "extends": ["react-app", "react-app/jest", "plugin:prettier/recommended", "prettier"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": ["warn", {
            "singleQuote": true,
            "printWidth": 150
        }]
        // tutaj mogą być reguły które np wyłączają wkurzające nas zasady ESlint-a
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint"
}